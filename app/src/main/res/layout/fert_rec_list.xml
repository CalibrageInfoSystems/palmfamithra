<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">
    <!-- Fertilizer Recommendation Details-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_5"
            >

            <TextView
                android:id="@+id/recommended_fertilizerLabel"
                android:layout_marginStart="10dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/recommended_ertilizer"
                android:paddingLeft="8dp"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:fontFamily="@font/hind_semibold"
                android:textStyle="bold"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/recommended_fertilizer"
                android:textColor="@color/colorOrange2"
                android:layout_toRightOf="@+id/recommended_fertilizerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plot_code"
                android:fontFamily="@font/hind_semibold"
                android:gravity="center"
                android:paddingLeft="5dp"

                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />



            <TextView
                android:id="@+id/DosageLabel"
                android:text="@string/dosage_only"
                android:fontFamily="@font/hind_semibold"
                android:layout_marginStart="8dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_fertilizerLabel"
                android:paddingLeft="8dp"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/Dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_fertilizerLabel"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/DosageLabel"

                android:layout_toRightOf="@+id/DosageLabel"
                android:fontFamily="@font/hind_semibold"
                android:paddingLeft="5dp"
                android:hint="1"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/UOMName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_fertilizerLabel"


                android:layout_toRightOf="@+id/Dosage"
                android:fontFamily="@font/hind_semibold"
                android:hint="kg"

                android:paddingLeft="5dp"
                android:paddingTop="@dimen/album_title_padding"

                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/commentsLabel"
                android:layout_marginStart="8dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/comments"

                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="2dp"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:layout_below="@+id/DosageLabel"
                android:fontFamily="@font/hind_semibold"
                android:textStyle="bold"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/comments"
                android:layout_toRightOf="@+id/commentsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/comments"
                android:layout_below="@id/DosageLabel"
                android:fontFamily="@font/hind_semibold"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/LastUpdatedDateLabel"
                android:layout_marginStart="8dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_semibold"
                android:text="@string/LastUpdatedDate"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="2dp"
                android:visibility="gone"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:layout_below="@+id/comments"
                android:textStyle="bold"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/LastUpdatedDate"
                android:layout_toRightOf="@+id/LastUpdatedDateLabel"
                android:layout_width="match_parent"
                android:fontFamily="@font/hind_semibold"
                android:layout_height="wrap_content"
                android:hint="@string/LastUpdatedDate"
                android:visibility="gone"
                android:layout_below="@id/comments"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>