<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/vehiclename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/star"
            android:layout_marginStart="6dp"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_weight="3"
            android:drawablePadding="5dp"
            android:fontFamily="@font/hind_semibold"
            android:text="@string/village"
            android:textColor="@color/blacknew"
            android:textSize="@dimen/album_title" />




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:weightSum="10"
            android:layout_height="wrap_content">




            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_weight="5"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:visibility="gone"
                    android:drawableRight="@drawable/star"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/hind_semibold"
                    android:paddingTop="5dp"
                    android:text="@string/ownvehicles"
                    android:textColor="@color/blacknew"
                    android:textSize="@dimen/album_title" />

                <EditText
                    android:id="@+id/Vehiclecount"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="3"

                    android:layout_margin="@dimen/margin_5"
                    android:background="@drawable/edtt_bg"
                    android:cursorVisible="true"
                    android:fontFamily="@font/hind_semibold"
                    android:hint="@string/ownvehicles"
                    android:inputType="number"
                    android:maxLength="3"

                    android:paddingLeft="15dp"
                    android:singleLine="false"
                    android:textColor="@color/blacknew"
                    android:textColorHint="@color/half_black"
                    android:textSize="@dimen/album_title">

                </EditText>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/devider_black" />
    </LinearLayout>


</LinearLayout>