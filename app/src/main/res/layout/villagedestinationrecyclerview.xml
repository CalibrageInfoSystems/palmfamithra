<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/villageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:drawableRight="@drawable/star"
                android:drawablePadding="5dp"
                android:fontFamily="@font/hind_semibold"
                android:text="@string/villageName"
                android:textColor="@color/blacknew"
                android:textSize="@dimen/album_title" />

            <EditText
                android:id="@+id/peak_plotvillagename"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/edtt_bg"
                android:cursorVisible="true"
                android:fontFamily="@font/hind_semibold"
                android:hint="@string/villageName"
                android:inputType="text"
                android:maxLength="1000"
                android:paddingLeft="15dp"
                android:singleLine="false"
                android:textColor="@color/blacknew"
                android:textColorHint="@color/half_black"
                android:textSize="@dimen/album_title">

            </EditText>
            <LinearLayout
                android:id="@+id/destinationlyt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingTop="@dimen/margin_5"
                android:weightSum="1">

                <LinearLayout
                    android:layout_weight="0.5"
                    android:id="@+id/destination1layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/margin_5">

                    <TextView
                        android:fontFamily="@font/hind_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:drawableRight="@drawable/star"
                        android:drawablePadding="5dp"
                        android:text="@string/destination1"
                        android:textColor="@color/blacknew"
                        android:textSize="@dimen/album_title" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/spinnerr_bg"
                        android:elevation="2dp">

                        <Spinner
                            android:id="@+id/destination1spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="-1dp"
                            android:background="@null"
                            android:minHeight="0dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="@dimen/_8dp"
                            android:src="@drawable/down_arrow24" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.5"
                    android:id="@+id/destination2layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/margin_5">

                    <TextView
                        android:fontFamily="@font/hind_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:drawableRight="@drawable/star"
                        android:drawablePadding="5dp"
                        android:text="@string/destination2"
                        android:textColor="@color/blacknew"
                        android:textSize="@dimen/album_title" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/spinnerr_bg"
                        android:elevation="2dp">

                        <Spinner
                            android:id="@+id/destination2spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="-1dp"
                            android:background="@null"
                            android:minHeight="0dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="@dimen/_8dp"
                            android:src="@drawable/down_arrow24" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>