<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/fert_baground"
    android:layout_margin="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/new_des"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/thumbnail2"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:padding="3dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/product_title_label"
                android:layout_width="0dp"
                android:fontFamily="@font/hind_semibold"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_food_name"
                android:paddingLeft="3dp"
                android:paddingTop="@dimen/album_title_padding"
                android:textStyle="bold"
                android:layout_weight=".2"

                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/product_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:fontFamily="@font/hind_semibold"
                android:layout_margin="2dp"

                android:paddingTop="@dimen/album_title_padding"

                android:text="abc"
                android:textColor="@color/colorOrange"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:fontFamily="@font/hind_semibold"
                android:layout_alignParentRight="true"
                android:layout_weight=".1"
                android:background="@drawable/cancel"
                android:paddingTop="@dimen/album_title_padding"

                android:textAlignment="textEnd"
                android:textColor="@color/colorOrange"
                android:textSize="12dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"

            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="fitCenter"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/des_linear"

            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/des_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/selected_food_name"

                android:fontFamily="@font/hind_semibold"
                android:layout_weight=".1"
                android:textStyle="bold"
                android:text="@string/description"
                android:textColor="@color/black"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="14dp"

                android:text="abc.........................abblkvxcvxcc c..................................................."
                android:layout_weight="0.7"

                android:fontFamily="@font/hind_semibold"

                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@drawable/devider_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/thumbnail2"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:padding="3dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/price_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_food_name"
                android:layout_weight=".25"
                android:paddingLeft="3dp"
                android:paddingTop="@dimen/album_title_padding"
                android:textStyle="bold"
                android:text="@string/price"
                android:fontFamily="@font/hind_semibold"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:orientation="vertical"
                android:layout_height="45dp">


                <TextView
                    android:id="@+id/discount_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/selected_food_name"
                    android:layout_weight=".5"
                    android:paddingLeft="3dp"
                    android:paddingTop="@dimen/album_title_padding"
                    android:fontFamily="@font/hind_semibold"
                    android:text=" "
                    android:textColor="@color/black"

                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/selected_food_name"
                    android:paddingLeft="3dp"

                    android:layout_weight=".5"
                    android:fontFamily="@font/hind_semibold"
                    android:text=" "
                    android:textColor="@color/red"
                    android:textSize="12dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/gst_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_food_name"
                android:layout_weight=".3"
                android:paddingLeft="3dp"
                android:paddingTop="@dimen/album_title_padding"
                android:text="@string/gst"
                android:textColor="@color/black"
                android:fontFamily="@font/hind_semibold"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gst_price"
                android:layout_width="0dp"
                android:fontFamily="@font/hind_semibold"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_food_name"
                android:paddingLeft="3dp"
                android:paddingTop="@dimen/album_title_padding"
                android:layout_weight=".2"

                android:text=" "
                android:textColor="@color/black"
                android:textSize="12dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@drawable/devider_line" />
