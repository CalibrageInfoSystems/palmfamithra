<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:weightSum="1"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_margin="3dp"
        android:orientation="vertical"


        android:paddingBottom="@dimen/activity_vertical_margin">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trans_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:scrollbarSize="3dp"

            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbVertical="@color/colorPrimary"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_marginTop="@dimen/_200dp"
            android:text="@string/no_trans_found"
        android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_20"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"


        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_margin="6dp"


        android:orientation="vertical">

        <Button
            android:id="@+id/transportationratesbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dip"

            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:drawableStart="@drawable/delivery"
            android:fontFamily="@font/hind_semibold"

            android:paddingStart="20dp"

            android:text="@string/transportationrates"
            android:textAllCaps="false"
            android:textColor="@color/colorOrange" />

        <!--        <Button-->
        <!--            android:id="@+id/settings"-->
        <!--            style="@style/Common_Button"-->
        <!--            android:layout_width="190dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center_horizontal"-->
        <!--            android:background="@color/colorAccent"-->
        <!--            android:drawableStart="@drawable/transportation"-->
        <!--            android:paddingStart="40dp"-->
        <!--            android:paddingEnd="40dp"-->

        <!--            android:text="settings"-->
        <!--            android:textColor="#FFF" />-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:padding="5dp"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:layout_margin="6dp"


        android:orientation="vertical"
        android:background="@drawable/memo_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_semibold"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/colorOrange"
                android:text="@string/notee"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_semibold"
                android:text="@string/tansportation_note"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"

                android:textSize="@dimen/_14dp"
                android:textStyle="normal" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
