<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"

        android:layout_margin="3dp"
        android:elevation="7dp"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_margin"
            >

            <!--<TextView-->
            <!--android:id="@+id/collection_id_label"-->
            <!--android:layout_marginStart="@dimen/margin_20"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingLeft="@dimen/album_title_padding"-->
            <!--android:paddingRight="@dimen/album_title_padding"-->
            <!--android:paddingTop="@dimen/album_title_padding"-->
            <!--android:text="@string/collection_id"-->
            <!--android:textColor="@color/album_title"-->
            <!--android:textSize="@dimen/album_title" />-->


            <TextView
                android:id="@+id/plotIdLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="@dimen/album_title_padding"
                android:fontFamily="@font/hind_semibold"
                android:paddingRight="@dimen/album_title_padding"
                android:text="@string/collection_id"
                android:textColor="@color/black"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/collection_id"
                android:layout_width="match_parent"
                android:fontFamily="@font/hind_semibold"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@+id/plotIdLabel"
                android:hint="collection_id"

                android:paddingTop="@dimen/album_title_padding"

                android:singleLine="true"
                android:textColor="@color/colorOrange2"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/palmAreaLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/plotIdLabel"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/hind_semibold"
                android:layout_marginTop="0dp"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"

                android:text="@string/net_weight"
                android:textColor="@color/black"

                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNetWeight"
                android:hint="tvNetWeight"
                android:fontFamily="@font/hind_semibold"
                android:layout_toRightOf="@+id/palmAreaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/plotIdLabel"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/locationLabel"
                android:text="@string/only_date"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_semibold"
                android:layout_below="@id/palmAreaLabel"
                android:paddingLeft="8dp"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/tvDate"
                android:hint="Date"
                android:layout_toRightOf="@+id/locationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/palmAreaLabel"
                android:fontFamily="@font/hind_semibold"
                android:paddingRight="@dimen/album_title_padding"
                android:maxLength="10"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/statusLabel"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/cc"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="2dp"
                android:fontFamily="@font/hind_semibold"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:layout_below="@+id/locationLabel"
                android:textStyle="bold"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/tvCc"
                android:hint="cc"
                android:layout_toRightOf="@+id/statusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationLabel"
                android:fontFamily="@font/hind_semibold"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <!--  <TextView
                  android:id="@+id/count"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/title"
                  android:paddingBottom="@dimen/songs_count_padding_bottom"
                  android:paddingLeft="@dimen/album_title_padding"
                  android:paddingRight="@dimen/album_title_padding"
                  android:textSize="@dimen/songs_count" />-->
            <TextView
                android:id="@+id/farmer_Code"
                android:layout_width="match_parent"
                android:fontFamily="@font/hind_semibold"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCc"
                android:visibility="gone"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:textSize="@dimen/songs_count" />
            <TextView
                android:id="@+id/plot_Mandal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/farmer_Code"
                android:fontFamily="@font/hind_semibold"
                android:visibility="gone"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:textSize="@dimen/songs_count" />
            <TextView
                android:id="@+id/plot_State"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plot_Mandal"
                android:visibility="gone"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:fontFamily="@font/hind_semibold"
                android:textSize="@dimen/songs_count" />
            <TextView
                android:id="@+id/plot_District"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_semibold"
                android:layout_below="@id/plot_State"
                android:visibility="gone"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:textSize="@dimen/songs_count" />

            <TextView
                android:visibility="gone"
                android:id="@+id/blockedCollection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="4dp"
                android:textColor="@color/red"
                android:layout_below="@+id/statusLabel"
                android:text="Quickpay is currently unavailable for this collection.">

            </TextView>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
