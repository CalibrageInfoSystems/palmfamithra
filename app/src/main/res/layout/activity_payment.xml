<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    tools:context="in.calibrage.palm360fa.Views.Activities.PaymentActivity">
    <LinearLayout
        android:id="@+id/linlaHeaderProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"


        >

        <ProgressBar
            android:id="@+id/pbHeaderProgress"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:theme="@style/AppTheme.WhiteAccent">

        </ProgressBar>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/backlinear"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="@dimen/margin_20"
                android:src="@drawable/ic_left" />

            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/home"
                android:textColor="#ff0000ff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/back"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/hind_semibold"
                android:text="@string/payments"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lin_one"
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginLeft="@dimen/_8dp"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_marginRight="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:background="@drawable/collect_bg">

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/lin_six"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/text_size"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/hind_semibold"
            android:text="@string/next"
            style="@style/Common_Button"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/margin_12" />

        <ImageView
            android:id="@+id/imgBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/ic_bank_white" />

        <RelativeLayout
            android:id="@+id/lin_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_head"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvtext_item_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/hind_semibold"
                android:text="@string/bank_holder"
                android:textColor="@color/white"

                android:textSize="@dimen/album_title"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/hind_semibold"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtext_item_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15sp"
                android:layout_toRightOf="@+id/dot2"
                android:fontFamily="@font/hind_semibold"
                android:hint=" "
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/album_title" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_two"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvtext_item_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hind_semibold"
                android:text="@string/account_no"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtext_item_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@+id/dot3"
                android:fontFamily="@font/hind_semibold"
                android:hint=""
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/album_title" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_three"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvtext_item_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/hind_semibold"
                android:text="@string/bank_name"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtext_item_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@+id/dot4"
                android:fontFamily="@font/hind_semibold"
                android:hint=""
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/album_title" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_four"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvtext_item_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5sp"
                android:text="@string/branch_name"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/hind_semibold"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtext_item_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@+id/dot5"
                android:fontFamily="@font/hind_semibold"
                android:hint=""
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/album_title" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_five"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvtext_item_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5sp"

                android:text="@string/ifsc"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dot6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtext_item_eleven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@+id/dot6"
                android:fontFamily="@font/hind_semibold"
                android:hint=""
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/album_title" />

            -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgBank"
            android:layout_marginTop="0sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvtext_item"
                android:background="@drawable/line_bg" />

            <TextView
                android:id="@+id/tvtext_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:text="@string/bank_details"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>





</RelativeLayout>