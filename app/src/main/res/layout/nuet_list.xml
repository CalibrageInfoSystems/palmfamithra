<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">
    <!-- Nutrient Deficiency Details-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_5"
            >

            <TextView
                android:id="@+id/NutrientDeficiencyNameLabel"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/_170dp"
                android:layout_height="wrap_content"
                android:text="@string/NutrientDeficiencyName"
                android:paddingLeft="@dimen/album_title_padding"
                android:fontFamily="@font/hind_semibold"

                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/NutrientDeficiencyName"
                android:textColor="@color/colorOrange2"
                android:layout_toRightOf="@+id/NutrientDeficiencyNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NutrientDeficiencyName"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:fontFamily="@font/hind_semibold"


                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/NameofchemicalappliedLabel"
                android:layout_width="@dimen/_170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/NutrientDeficiencyNameLabel"
                android:layout_marginStart="@dimen/margin_10"

                android:paddingLeft="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:fontFamily="@font/hind_semibold"

                android:paddingRight="@dimen/album_title_padding"
                android:text="@string/Nameofchemicalapplied"
                android:textColor="@color/black"
                android:textSize="@dimen/album_title"

                android:textStyle="bold" />
            <TextView
                android:id="@+id/Nameofchemicalapplied"
                android:hint="@string/Nameofchemicalapplied"
                android:layout_toRightOf="@+id/NameofchemicalappliedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:fontFamily="@font/hind_semibold"

                android:layout_below="@id/NutrientDeficiencyNameLabel"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/RecommendedFertilizerLabel"
                android:text="@string/recommended_ertilizer"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/NameofchemicalappliedLabel"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:fontFamily="@font/hind_semibold"

                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/RecommendedFertilizer"
                android:hint="@string/recommended_ertilizer"
                android:layout_toRightOf="@+id/RecommendedFertilizerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NameofchemicalappliedLabel"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/album_title_padding"
                android:fontFamily="@font/hind_semibold"

                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <!-- <TextView
            android:id="@+id/UOMNameLabel"
            android:layout_marginStart="8dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/UOMName"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="2dp"
            android:paddingTop="@dimen/album_title_padding"
            android:textColor="@color/album_title"
            android:layout_below="@+id/RecommendedFertilizerLabel"
            android:textStyle="bold"
            android:textSize="@dimen/album_title" />
            <TextView
            android:id="@+id/UOMName"
            android:layout_toRightOf="@+id/UOMNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/UOMName"
            android:layout_below="@id/RecommendedFertilizerLabel"
            android:paddingLeft="5dp"
            android:paddingRight="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            android:textSize="@dimen/album_title" />-->
            <TextView
                android:id="@+id/DosageLabel"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/_170dp"
                android:layout_height="wrap_content"
                android:text="@string/dosage_only"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="2dp"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:layout_below="@+id/RecommendedFertilizerLabel"
                android:textStyle="bold"
                android:fontFamily="@font/hind_semibold"

                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/Dosage"
                android:layout_toRightOf="@+id/DosageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/RecommendedFertilizerLabel"

                android:paddingRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/DosageLabel"


                android:fontFamily="@font/hind_semibold"
                android:paddingLeft="5dp"
                android:hint="1"
                android:paddingTop="@dimen/album_title_padding"


                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/UOMName"
                android:layout_toRightOf="@+id/Dosage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/RecommendedFertilizerLabel"

                android:fontFamily="@font/hind_semibold"
                android:hint="kg"

                android:paddingLeft="5dp"
                android:paddingTop="@dimen/album_title_padding"

                android:textSize="@dimen/album_title"  />

            <TextView
                android:id="@+id/RegisteredDateLabel"
                android:layout_width="@dimen/_170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DosageLabel"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="0dp"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:paddingRight="2dp"
                android:fontFamily="@font/hind_semibold"
                android:visibility="gone"
                android:text="@string/registeredDate"
                android:textColor="@color/black"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RegisteredDate"
                android:layout_toRightOf="@+id/RegisteredDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/registeredDate"
                android:fontFamily="@font/hind_semibold"
                android:visibility="gone"
                android:layout_below="@id/DosageLabel"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/commentsLabel"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/_170dp"
                android:fontFamily="@font/hind_semibold"

                android:layout_height="wrap_content"
                android:text="@string/comments"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="2dp"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:layout_below="@+id/RegisteredDateLabel"
                android:textStyle="bold"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/Comments"
                android:layout_toRightOf="@+id/commentsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_semibold"

                android:hint="@string/comments"
                android:layout_below="@id/RegisteredDateLabel"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>