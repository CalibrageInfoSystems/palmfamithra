<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context="in.calibrage.palm360fa.Views.Activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/farmer_app_login"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/linear"
        android:orientation="vertical">

        <!-- Logo -->
        <RelativeLayout
            android:id="@+id/logoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/palm_fa_mitra"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="User Name"
                style="@style/textbasic_title"
                android:maxLines="1"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/username_edittxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/hind_semibold"
                android:hint="@string/user_name"
                android:maxEms="50"
                android:maxLength="25"
                android:maxLines="1"
                android:singleLine="true"
                android:nextFocusDown="@id/btn_login"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/light_gray2"
                android:textSize="20dp"
                style="@style/editTxt_normal"
                />
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/password"
            style="@style/textbasic_title"
            android:maxLines="1"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/password_edittxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/hind_semibold"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxEms="50"
            android:maxLines="1"
            android:singleLine="true"
            android:nextFocusDown="@id/btn_login"
            android:paddingLeft="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/light_gray2"
            android:textSize="20dp"
            style="@style/editTxt_normal"
            />
    </LinearLayout>

        <Button
            android:id="@+id/loginBtn"
            style="@style/basicBtnStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:text="@string/login" />
