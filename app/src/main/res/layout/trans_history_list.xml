<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"

        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calender" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/dateLabel"
                        android:layout_marginLeft="180dp"
                        android:maxLength="10"
                        android:text="Email"
                        android:fontFamily="@font/hind_semibold"
                        android:textSize="@dimen/album_title"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dateLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hind_semibold"
                        android:text="Date/123/456"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="0.001"
                    android:background="@drawable/line_bg"
                    android:orientation="vertical"
                    android:visibility="visible">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/collection_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/memo_label"
                            android:layout_weight="1"
                            android:fontFamily="@font/hind_semibold"
                            android:gravity="center_vertical"
                            android:maxLines="1"

                            android:textStyle="bold"
                            android:textColor="@color/colorOrange"
                            android:text=" a"
                            android:textSize="@dimen/album_title" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/adjustedLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/gr_amount_label"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/hind_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/trans_charges"
                            android:textStyle="bold"


                            />

                        <TextView
                            android:id="@+id/trans_charge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hind_semibold"
                            android:layout_weight="0.4"

                            android:textSize="@dimen/album_title" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/netweight_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/gr_amount_label"
                            android:layout_weight="0.6"
                            android:textStyle="bold"
                            android:fontFamily="@font/hind_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/net_weightt"


                            />

                        <TextView
                            android:id="@+id/net_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="0.4"
                            android:fontFamily="@font/hind_semibold"

                            android:textSize="@dimen/album_title" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/amount_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/invoice_label"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/hind_semibold"
                            android:text="@string/total_amt"
                            android:textStyle="bold"
                            android:textSize="@dimen/album_title" />

                        <TextView
                            android:id="@+id/amount_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/gr_amount_label"
                            android:layout_weight="0.4"

                            android:fontFamily="@font/hind_semibold"
                            android:textSize="@dimen/album_title" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:visibility="gone"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical"
                            android:text="@string/status"
                            android:fontFamily="@font/hind_semibold"
                            android:textSize="@dimen/album_title" />

                        <TextView
                            android:id="@+id/statuss"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/ffb_quantity"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/hind_semibold"
                            android:textSize="@dimen/album_title" />
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>






            <TextView
                android:id="@+id/textViewPowers"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

