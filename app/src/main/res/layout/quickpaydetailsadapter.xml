<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    app:cardBackgroundColor="@color/whitepure"
    android:layout_margin="@dimen/_8dp"
    android:id="@+id/card_view"
    card_view:cardUseCompatPadding="true"
    android:elevation="7dp"
    card_view:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView

            android:layout_weight="0.37"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/hind_semibold"
            android:text="@string/collection_Id"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="normal" />


        <TextView
            android:gravity="center"
            android:layout_weight="0.03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=":"
            android:fontFamily="@font/hind_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="normal" />

        <TextView
            android:paddingLeft="4dp"
            android:layout_weight="0.60"
            android:layout_width="0dp"
            android:id="@+id/collectionid"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:hint=""
            android:text="0"
            android:fontFamily="@font/hind_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <TextView

            android:layout_weight="0.37"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/hind_semibold"
            android:text="@string/quantity_mt"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="normal" />


        <TextView
            android:gravity="center"
            android:layout_weight="0.03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=":"
            android:fontFamily="@font/hind_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="normal" />

        <TextView

            android:paddingLeft="4dp"
            android:layout_weight="0.60"
            android:layout_width="0dp"
            android:id="@+id/text_quntity"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:hint=""
            android:text="0"
            android:fontFamily="@font/hind_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="0.37"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/hind_semibold"
            android:text="@string/date_label"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="normal" />


        <TextView
            android:gravity="center"
            android:layout_weight="0.03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=":"
            android:fontFamily="@font/hind_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="normal" />

        <TextView
            android:paddingLeft="4dp"
            android:layout_weight="0.60"
            android:layout_width="0dp"
            android:id="@+id/collectiondate"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:hint=""
            android:text="0"
            android:fontFamily="@font/hind_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="0.37"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_semibold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:text="@string/ffb_flot"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="normal" />


        <TextView
            android:gravity="center"
            android:layout_weight="0.03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1sp"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:fontFamily="@font/hind_semibold"
            android:textStyle="normal" />

        <TextView

            android:paddingLeft="4dp"
            android:layout_weight="0.60"
            android:layout_width="0dp"
            android:id="@+id/text_flat_charge"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="1sp"
            android:fontFamily="@font/hind_semibold"
            android:hint=""
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="0.37"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/hind_semibold"
            android:text="@string/amount_of_FFB"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="normal" />


        <TextView
            android:gravity="center"
            android:layout_weight="0.03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1sp"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:fontFamily="@font/hind_semibold"
            android:textStyle="normal" />

        <TextView
            android:paddingLeft="4dp"
            android:layout_weight="0.60"
            android:layout_width="0dp"
            android:id="@+id/tvtext_item_five"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="1sp"
            android:hint=""
            android:text="0"
            android:fontFamily="@font/hind_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"></TextView>

</LinearLayout>
</androidx.cardview.widget.CardView>