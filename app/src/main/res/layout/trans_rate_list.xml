<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"

        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="0.6"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/netweight_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/gr_amount_label"
                            android:layout_weight="0.6"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/hind_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/mandal"


                            />

                        <TextView
                            android:id="@+id/mandal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hind_semibold"
                            android:layout_weight="0.4"
                            android:textColor="@color/black"
                            android:textSize="@dimen/album_title" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView

                            android:id="@+id/adjustedLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/gr_amount_label"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="@string/village"
                            android:fontFamily="@font/hind_semibold"

                            />

                        <TextView
                            android:id="@+id/village"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hind_semibold"
                            android:layout_weight="0.4"
                            android:textColor="@color/black"
                            android:textSize="@dimen/album_title" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/amount_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/invoice_label"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/hind_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/rate"
                            android:textColor="@color/black"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold" />

                        <TextView
                            android:fontFamily="@font/hind_semibold"
                            android:id="@+id/rate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/gr_amount_label"
                            android:layout_weight="0.4"
                            android:textColor="@color/black"

                            android:textSize="@dimen/album_title" />
                    </LinearLayout>





                </LinearLayout>
            </LinearLayout>






            <TextView
                android:id="@+id/textViewPowers"
                android:fontFamily="@font/hind_semibold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

