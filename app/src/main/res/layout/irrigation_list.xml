<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">
    <!-- Fertilizer Recommendation Details-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_5"
            >

            <TextView
                android:id="@+id/recommended_fertilizerLabel"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/_170dp"
                android:layout_height="wrap_content"
                android:text="@string/irrigation_name"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:fontFamily="@font/hind_semibold"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/irrigation_name"
                android:textColor="@color/colorOrange2"
                android:layout_toRightOf="@+id/recommended_fertilizerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plot_code"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:fontFamily="@font/hind_semibold"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />



            <TextView
                android:id="@+id/DosageLabel"
                android:text="@string/updated_by"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/_170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_fertilizerLabel"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:fontFamily="@font/hind_semibold"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/updated_by"
                android:hint=""
                android:layout_toRightOf="@+id/DosageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_fertilizerLabel"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:fontFamily="@font/hind_semibold"
                android:textSize="@dimen/album_title" />


            <TextView
                android:id="@+id/commentsLabel"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="@dimen/_170dp"
                android:layout_height="wrap_content"
                android:text="@string/updated_date"
                android:fontFamily="@font/hind_semibold"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="2dp"
                android:visibility="gone"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:layout_below="@+id/DosageLabel"
                android:textStyle="bold"
                android:textSize="@dimen/album_title" />
            <TextView
                android:id="@+id/updated_date"
                android:layout_toRightOf="@+id/commentsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:fontFamily="@font/hind_semibold"
                android:maxLength="10"
                android:visibility="gone"
                android:layout_below="@id/DosageLabel"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>